<h1>All articles</h1>
<% @articles.each do |article| %>
  <p><%if article.completed %>
    <input type="checkbox" checked>
    <% else  %>
    <input type="checkbox">
    <% end %>
    <%= link_to article.title , article_path(article)%><%= link_to '     Delete?', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>
<p><%= link_to 'Add a new article', new_article_path(@articles)%></p>
